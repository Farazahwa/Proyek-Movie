@model NSCMovie.Models.MovieViewModel
@{
    ViewData["Title"] = "Movie";
}


<head>
    <style>
        body{
            background-color: #C0C0C0;
        }
        header{            
            color: #000000;            
        }        
        nav{
            background-color: #808080;
            font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif ;
            color: #000000;
        }                
    </style>
</head>
<body>
    <div class="text-left">
        <img src="@Model.Movie.Image" alt="Posters" width="200" height="300">        
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayFor(model => Model.Movie.Title)</th>                                                    
            </tr>
        </thead>        
        <tbody>
            <tr>
                <td>@Html.DisplayNameFor(model => Model.Movie.Rating)</td>
                <td>@Html.DisplayFor(model => Model.Movie.Rating.Rating)</td>                                            
            </tr> 
            <tr>
                <td>@Html.DisplayNameFor(model => Model.Movie.Room)</td>
                <td>@Html.DisplayFor(model => Model.Movie.Room)</td>                                                                  
            </tr>            
        </tbody>
    </table>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.TimeSchedule)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TimeSchedule)
            {
                <tr>
                    <td>@item.Time.ToShortTimeString()</td>
                </tr>
            }
        </tbody>
    </table>    
    <div class="text-right">
        <h6>@Html.DisplayFor(model => Model.Movie.Price)</h6>
        <form asp-controller="Transaction" asp-action="Create" asp-route-id="@Model.Movie.Id" method="get">
            <div class="form-group">
                    <button type="submit" class="btn-primary"> Yes </button>
                    <a asp-controller="Movie" asp-action="index"> Back </a>
            </div>
        </form>
    </div>
</body>
